#include <iostream>
using namespace std;
int main() {
    int numero;
    int soma = 0;

    cout << "Insira números inteiros (um número negativo para parar):" << endl;

    while (true) {
        cin >> numero;

        if (numero < 0) {
            break; 
        }

        soma += numero; 
    }

    cout << "A soma dos números é: " << soma << endl;

    return 0;
}
